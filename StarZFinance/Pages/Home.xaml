<Page x:Class="StarZFinance.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StarZFinance.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="560" d:DesignWidth="900"
      Title="Home">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border CornerRadius="25" Grid.Row="0" Grid.ColumnSpan="2" Background="{DynamicResource SecondaryBackgroundColor}" Margin="0,0,7,7">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="TestPython" Text="Good evening, Yoqzii !" FontSize="25" FontFamily="{StaticResource DefaultFont}" Margin="15,0,0,0" FontWeight="Medium" Foreground="{DynamicResource TextColor}" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Text="" FontSize="40" FontFamily="{StaticResource DefaultFont}" FontWeight="Medium" Foreground="{DynamicResource TextColor}" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>
        <Border CornerRadius="25" Grid.Row="0" Grid.Column="2" Background="{DynamicResource SecondaryBackgroundColor}" Margin="7,0,0,7">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Current Version" FontFamily="{StaticResource DefaultFont}" FontWeight="Medium" Foreground="{DynamicResource TextColor}" FontSize="20" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0" />
                <TextBlock Text="1.0.0" FontFamily="{StaticResource DefaultFont}" FontWeight="ExtraBold" Foreground="{DynamicResource TextColor}" FontSize="40" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0" />
                <Button Style="{DynamicResource DefaultButtons}" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Content="Check for Updates" Grid.Row="2" Margin="15,0,0,0" />
            </Grid>
        </Border>
        <Border CornerRadius="25" Grid.Row="1" Grid.Column="0" Background="{DynamicResource SecondaryBackgroundColor}" Margin="0,7,7,7">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="1.5*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Time Spent In The App" FontFamily="{StaticResource DefaultFont}" FontWeight="Medium" Foreground="{DynamicResource TextColor}" FontSize="15" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0" />
                <TextBlock Text="45 minutes." FontFamily="{StaticResource DefaultFont}" FontWeight="Bold" Foreground="{DynamicResource TextColor}" FontSize="35" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,0,0,0" />
            </Grid>
        </Border>
        <Border CornerRadius="25" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="2" Background="{DynamicResource SecondaryBackgroundColor}" Margin="7,7,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Stock Prices" FontFamily="{StaticResource DefaultFont}" FontWeight="Medium" Foreground="{DynamicResource TextColor}" FontSize="15" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0" />
                <TextBlock Text="" FontFamily="{StaticResource DefaultFont}" FontWeight="Bold" Foreground="{DynamicResource TextColor}" FontSize="35" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,0,0,0" />
            </Grid>
        </Border>
        <Border CornerRadius="25" Grid.Row="2" Grid.Column="0" Background="{DynamicResource SecondaryBackgroundColor}" Margin="0,7,7,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="1.5*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Market Currencies" FontFamily="{StaticResource DefaultFont}" FontWeight="Medium" Foreground="{DynamicResource TextColor}" FontSize="15" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0" />
                <TextBlock Text="" FontFamily="{StaticResource DefaultFont}" FontWeight="Bold" Foreground="{DynamicResource TextColor}" FontSize="35" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,0,0,0" />
            </Grid>
        </Border>
    </Grid>
</Page>
