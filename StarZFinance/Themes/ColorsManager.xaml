<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#1c1c1c" />
    <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#0d0d0d" />
    <SolidColorBrush x:Key="SideBarBackgroundColor" Color="#0d0d0d" />
    <SolidColorBrush x:Key="TextColor" Color="#ffffff" />
    <SolidColorBrush x:Key="IconColor" Color="#ffffff" />
    <SolidColorBrush x:Key="ProgressBarBackgroundColor" Color="#ffffff" />

    <LinearGradientBrush x:Key="AccentColor" StartPoint="0.5,0" EndPoint="0.5,1" SpreadMethod="Pad" MappingMode="RelativeToBoundingBox">
        <GradientStop Color="#FF0044EA" Offset="0.0" />
        <GradientStop Color="#FF0072B2" Offset="0.5" />
        <GradientStop Color="#FF00C7ED" Offset="1.0" />
    </LinearGradientBrush>

</ResourceDictionary>