<Window x:Class="StarZFinance.Windows.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarZFinance"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        ShowInTaskbar="True"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        Title="Edit"
        Height="200"
        Width="300"
        AllowsTransparency="True"
        Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Window Background Rectangle -->
        <Rectangle Panel.ZIndex="-1" Grid.RowSpan="2" Grid.ColumnSpan="3" RadiusX="20" RadiusY="20" Fill="{DynamicResource PrimaryBackgroundColor}" Opacity="1" Stroke="AliceBlue" Margin="0,0,0,0" RenderTransformOrigin="0.5,0.5" StrokeThickness="0"/>
        
        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10">
            <!-- Current Name -->
            <TextBlock Text="Current name :" FontSize="15" FontWeight="Medium" FontFamily="Outfit" Foreground="{DynamicResource TextColor}" Margin="0,0,0,10"/>
            <TextBlock x:Name="CurrentNameTextBlock" Text="" Padding="5,5,5,0" Opacity="0.7" Foreground="{DynamicResource TextColor}" FontFamily="Outfit" FontWeight="Medium" Background="{DynamicResource SecondaryBackgroundColor}" VerticalAlignment="Center" TextAlignment="Left" FontSize="15"  Margin="0,0,0,10" Height="30">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="20" Opacity="0.3" RenderingBias="Performance" ShadowDepth="5"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- New Name -->
            <TextBlock Text="New name :" FontWeight="Medium" FontFamily="Outfit" Foreground="{DynamicResource TextColor}" FontSize="15" Margin="0,0,0,10"/>
            <TextBox x:Name="NewNameTextBox" Text="" Padding="3,0,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Opacity="0.7" Background="{DynamicResource SecondaryBackgroundColor}" Foreground="{DynamicResource TextColor}" BorderThickness="0" FontWeight="Medium" FontFamily="Outfit" BorderBrush="#202020" Cursor="IBeam" FontSize="15" Margin="0,0,0,10" Height="30">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Foreground" Value="AliceBlue"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="Gray"/>
                                        </Trigger>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="Gray"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
                <TextBox.Effect>
                    <DropShadowEffect BlurRadius="20" Opacity="0.3" RenderingBias="Performance" ShadowDepth="5"/>
                </TextBox.Effect>
            </TextBox>
        </StackPanel>

        <!-- Buttons -->
        <Button x:Name="CancelRenameButton" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Margin="10,0,0,0" Height="30" Width="50" Content="Cancel" FontFamily="Outfit" FontWeight="Bold" Cursor="Hand" Foreground="AliceBlue" Template="{StaticResource DefaultButtons}" Click="CancelButton_Click"/>
        <Button x:Name="SaveRenameButton" Grid.Row="1" Grid.Column="1" Height="30" Width="50" HorizontalAlignment="Left" Content="Save" FontFamily="Outfit" FontWeight="Bold" Cursor="Hand" Foreground="AliceBlue" Template="{StaticResource DefaultButtons}" IsDefault="True" Click="SaveButton_Click"/>
    </Grid>
</Window>

